# Use the official Weaviate image
FROM semitechnologies/weaviate:latest

# Install Python and the Weaviate client SDK
RUN apt update && apt install -y python3 python3-pip
RUN pip3 install weaviate-client

# Copy the script into the container
COPY script.py /weaviate/script.py

# Custom entrypoint to run the script
ENTRYPOINT ["sh", "-c", "weaviate start & python3 /weaviate/script.py"]